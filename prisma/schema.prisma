generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum QuestionType {
  textQuestion
  codeQuestion
}

model Question {
  id        Int             @id @default(autoincrement())
  type       QuestionType
  text       String         @db.VarChar(128)
  answer     String?  
  options    String[]
  codeArgs   String[]
  exectedResult String?
  code          String?

 
  parrentTest   Test        @relation(fields: [parrentTestId], references: [id])
  parrentTestId Int
}

model User {
  id        Int             @id @default(autoincrement())
  nickname  String          @db.VarChar(64)   @unique
  phoneNumber String        @db.VarChar(16)   @unique

  answers   Answer[]
}

model Answer {
  id        Int             @id @default(autoincrement())
  user      User            @relation(fields: [userId], references: [id])
  userId    Int

  isRigth   Boolean
}

model Test {
  id        Int             @id @default(autoincrement())
  name      String          @db.VarChar(64)
  questions Question[]
}